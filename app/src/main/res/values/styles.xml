<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:navigationBarColor">@color/colorNav</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="cardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_s</item>

        <item name="android:layout_height">@dimen/custom_card_view_height</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:backgroundTint">#A6FFFFFF</item>
    </style>

    <style name="largeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
